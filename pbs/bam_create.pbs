#!/bin/bash -l
#PBS -l walltime=8:00:00,nodes=1:ppn=8,mem=16gb
#PBS -m abe
#PBS -M tasta005@umn.edu
#PBS -N bam_create
#PBS -o logs/output
#PBS -e logs/error

cd ~/ocpmi/bam/wes
module load bwa
module load samtools

for i in ./*.fastq;
do
    bwa mem -t 8 ~/ocpmi/gene_ref/hg38.fa $i.fastq | samtools sort -@8 -o $i.bam -;
done
